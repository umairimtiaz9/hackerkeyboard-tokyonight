<?xml version="1.0" encoding="utf-8"?>
<!-- Unified Dynamic Popup Shape with Connection to Key -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Explicit Transparent Base Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
        </shape>
    </item>
    <!-- Rounded Popup with Connection to Key -->
    <item android:left="2dp" android:top="0dp" android:right="2dp" android:bottom="0dp">
        <layer-list>
            <!-- Clip the bottom stroke by offsetting the item downwards -->
            <item android:bottom="-2dp">
                <shape android:shape="rectangle">
                    <corners
                        android:topLeftRadius="4dp"
                        android:topRightRadius="4dp"
                        android:bottomLeftRadius="0dp"
                        android:bottomRightRadius="0dp" />
                    <solid android:color="?attr/kbdColorHighlight" />
                    <stroke android:width="2dp" android:color="?attr/kbdColorPopup" />
                </shape>
            </item>
        </layer-list>
    </item>
</layer-list>