<?xml version="1.0" encoding="utf-8"?>
<!-- Dedicated container for long-press variations (Mini-Keyboard) -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Explicit Transparent Base Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00000000" />
        </shape>
    </item>
    <!-- Rounded Container without internal gaps -->
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <solid android:color="?attr/kbdColorBase" />
            <stroke android:width="2dp" android:color="?attr/kbdColorPopup" />
            <padding android:left="4dp" android:top="4dp" android:right="4dp" android:bottom="4dp" />
        </shape>
    </item>
</layer-list>